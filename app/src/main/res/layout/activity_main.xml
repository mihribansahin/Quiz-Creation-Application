<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="MERHABA ! "
        android:textColor="@color/purple_700"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.136" />

    <Button
        android:id="@+id/buttonAddQue"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginTop="444dp"
        android:text="SORU EKLE"
        app:layout_constraintEnd_toStartOf="@+id/buttonRemoveQue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCreatingExam"
        android:layout_width="162dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:text="SINAV OLUŞTUR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonAllListQue"
        app:layout_constraintTop_toBottomOf="@+id/buttonRemoveQue" />

    <Button
        android:id="@+id/buttonRemoveQue"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginTop="444dp"
        android:text="SORU ÇIKART"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonAddQue"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAllListQue"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:text="SORULARI LİSTELE"
        app:layout_constraintEnd_toStartOf="@+id/buttonCreatingExam"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddQue" />

</androidx.constraintlayout.widget.ConstraintLayout>